{
  "compilerOptions": {
    "lib": ["ES2015"],
    "target": "ES2015",
    "module": "Node16",
    "allowJs": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@config/*": ["./src/config/*"],
      "@server/*": ["./src/server/*"],
      "@lavalink/*": ["./src/lavalink/*"],
      "@commands/*": ["./src/commands/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@utils/*": ["./src/utils/*"],
      "@shared/*": ["./public/*"],
      "@tests/*": ["./src/tests/*"]
    },
    "types": [
      "bun"
    ]
  },
  "exclude": ["tsup.config.ts", "tsup.config.js", "tsconfig-paths.cjs", "eslint.config.mjs", "bun-build.js", "es-build.js", "dist", "build"]
}