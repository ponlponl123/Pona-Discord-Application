# Use oven/bun:alpine as the base image for all stages
FROM oven/bun:1.2.5-alpine AS base
WORKDIR /app
RUN apk add --no-cache python3 g++ make git

# ========================
# Build ytmusic-api
# ========================
FROM node:22.4.1-alpine AS ytmusic-api-builder
WORKDIR /builder
RUN apk add --no-cache git
RUN git clone --depth=1 https://github.com/ponlponl123/ts-npm-ytmusic-api /builder/ts-npm-ytmusic-api \
    && cd /builder/ts-npm-ytmusic-api \
    && npm install \
    && npm install -g tsup \
    && npm run build

# ========================
# Install Production Dependencies with NPM
# ========================
FROM node:22.4.1-alpine AS npm-deps
WORKDIR /pona-builder
RUN apk add --no-cache python3 make g++
COPY package.json package-lock.json ./
RUN npm install --production --ignore-scripts

# Copy ytmusic-api build
COPY --from=ytmusic-api-builder /builder/ts-npm-ytmusic-api ./node_modules/ytmusic-api

# ========================
# Install Build Dependencies & Build with Bun
# ========================
FROM base AS bun-builder
WORKDIR /pona-builder

# Install tsup FIRST (separate layer for caching)
RUN bun add -d tsup

# Copy package files  
COPY package.json package-lock.json ./

# Copy source code
COPY src ./src
COPY public ./public

# Build the application using bun build (simpler and faster than tsup)
RUN mkdir -p dist && \
    bun build src/index.ts --outfile dist/index.js --target node --minify && \
    bun build src/shard.ts --outfile dist/shard.js --target node --minify && \
    cp -r public dist/

# ========================
# Final Image (Minimal)
# ========================
FROM base AS runner
WORKDIR /pona
ENV NODE_ENV=production

# Copy production dependencies from npm-deps stage
COPY --from=npm-deps /pona-builder/node_modules ./node_modules

# Copy built application from bun-builder
COPY --from=bun-builder /pona-builder/dist ./dist
COPY package.json ./

EXPOSE 3000
ENV PORT=3000

CMD ["bun", "bun:start-reg-shard"]
