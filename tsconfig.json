{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "app/*": ["./src/app/*"],
      "config/*": ["./src/config/*"],
      "server/*": ["./src/server/*"],
      "commands/*": ["./src/commands/*"],
      "utils/*": ["./src/utils/*"],
      "shared/*": ["./public/*"],
      "tests/*": ["./src/tests/*"]
    }
  }
}
